---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->

  <Hero
    tagline="Services"
    title="Smart AI Integration, Tailored to You"
    subtitle="We help teams deploy intelligent document workflows using RAG pipelines, private LLMs, and seamless backend integration. Based in Utah — fully remote, fully committed."
    actions={[{ variant: 'primary', target: '_blank', text: 'Talk to us', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80',
      alt: 'Hero Image',
    }}
  />

  <!-- Features2 Widget -->

  <Features2
    title="How We Help"
    subtitle="Explore our core service areas below"
    columns={3}
    items={[
      {
        title: 'LLM Deployment',
        description:
          'We help you self-host, containerize, and scale large language models that understand your specific data and goals.',
        icon: 'tabler:brain',
      },
      {
        title: 'RAG Pipelines',
        description:
          'Retrieval-augmented generation connects LLMs to your internal data, enabling accurate, verifiable responses grounded in your content.',
        icon: 'tabler:file-search',
      },
      {
        title: 'Custom APIs',
        description:
          'We build APIs that integrate with your existing apps — Slack, Notion, SharePoint, or your own stack — for seamless AI access.',
        icon: 'tabler:api',
      },
      {
        title: 'Dashboard Integration',
        description:
          'Enable internal teams to view usage, upload files, and manage settings through simple, secure interfaces.',
        icon: 'tabler:layout-dashboard',
      },
      {
        title: 'Document Indexing',
        description:
          'Turn unstructured content into searchable vector indexes — PDFs, spreadsheets, and more — ready for real-time LLM queries.',
        icon: 'tabler:file-text-ai',
      },
      {
        title: 'Remote-first Development',
        description:
          'Utah-based but working globally, we’re built for async delivery and rapid integration cycles.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Content Widget: Emerging Capabilities -->

  <Content
    isReversed
    items={[
      {
        title: 'Contextual Understanding',
        description:
          'LLMs paired with vector databases allow for nuanced understanding of large documents — even across formats and languages.',
        icon: 'tabler:books',
      },
      {
        title: 'RAG Evolution',
        description:
          'Beyond simple Q&A, modern RAG enables summarization, comparison, multi-hop reasoning, and even workflow execution based on your content.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'Hybrid Search',
        description:
          'Combine keyword, semantic, and metadata filters for precise results and complete transparency over model decisions.',
        icon: 'tabler:search',
      },
      {
        title: 'Multi-modal Input',
        description:
          'We’re integrating tools for future-ready models that can reason over text, tables, and images — using your business files.',
        icon: 'tabler:layout-grid-add',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1525909002-1b05e0c869d8?ixlib=rb-4.0.3&auto=format&fit=crop&w=870&q=80',
      alt: 'Emerging Capabilities Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Emerging Capabilities</h3>
    </Fragment>
  </Content>

  <!-- Content Widget: RAG Benefits -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Scalable Knowledge Access',
        description:
          'Teams can search internal data without needing to know where it’s stored or how it’s formatted — everything is unified through the LLM.',
        icon: 'tabler:database-search',
      },
      {
        title: 'Reduced Hallucinations',
        description:
          'By grounding responses in your own sources, RAG improves trustworthiness and auditability over generic model output.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Flexible Data Ownership',
        description:
          'Whether your data lives in the cloud, on-premise, or across both, we build RAG systems that work around your stack and security needs.',
        icon: 'tabler:server',
      },
      {
        title: 'Actionable Intelligence',
        description:
          'From document search to real-time decision support, RAG helps turn static files into dynamic knowledge.',
        icon: 'tabler:bolt',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664688-cf412ec27db2?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80',
      alt: 'Benefits of RAG',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Use RAG?</h3>
    </Fragment>
  </Content>

  <!-- CallToAction Widget -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Let’s Talk',
        href: '/contact',
      },
    ]}
    title="Build your internal document assistant"
    subtitle="Explore how we can help you deploy private LLMs and RAG systems that work with your data — and your workflows."
  />
</Layout>
