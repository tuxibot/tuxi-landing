---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import { headerData } from '~/navigation';

const metadata = {
  title: 'Tuxibot – AI Answers from Your Documents',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[{ variant: 'primary', text: 'Request Demo', href: '/contact' }]}
      isSticky
    />
  </Fragment>

  <Hero2
    tagline="Document-Based AI Answers"
    actions={[
      { variant: 'primary', text: 'Request Demo', href: '/contact' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1580481072645-022f9a6dbf27?auto=format&fit=crop&w=2070&q=80',
      alt: 'Tuxibot Automation Platform',
    }}
  >
    <Fragment slot="title">
      Meet <span class="text-accent dark:text-white">Tuxibot</span><br />
      AI-Powered Q&A from Your Docs
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Upload documents, ask questions, and get real answers — powered by retrieval-augmented generation (RAG).
      </span>
    </Fragment>
  </Hero2>

  <Features
    id="features"
    title="What can Tuxibot do?"
    subtitle="Bring clarity to your data and documents instantly."
    columns={2}
    items={[
      {
        title: 'Search Across PDFs & Docs',
        description:
          'Upload files and instantly ask questions. Tuxibot retrieves relevant context and generates precise answers.',
        icon: 'tabler:search',
      },
      {
        title: 'Custom Knowledge Bases',
        description:
          'Organize content into collections by team, topic, or client. Great for internal wikis, HR, support, and more.',
        icon: 'tabler:books',
      },
      {
        title: 'Privately Hosted',
        description:
          'Tuxibot is deployed privately in your own secure environment. No third-party APIs or cloud sharing.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Chat-Style Interface',
        description:
          'Interact with your content like a conversation. Clarify, refine, and drill deeper with follow-up questions.',
        icon: 'tabler:message',
      },
      {
        title: 'Built-in RAG Pipeline',
        description:
          'Tuxibot uses embeddings + vector search to retrieve document chunks before answering with context-aware LLM output.',
        icon: 'tabler:brain',
      },
      {
        title: 'Supports Any File Type',
        description:
          'PDF, TXT, DOCX, Markdown, and even web page scraping. Just drag, drop, and chat.',
        icon: 'tabler:file-text',
      },
    ]}
  />

  <Content
    title="Use cases"
    subtitle="Where Tuxibot makes a difference"
    isReversed
    items={[
      {
        title: 'Support teams',
        description:
          'Reduce response times by enabling agents to search manuals, internal wikis, and policy documents in seconds.',
      },
      {
        title: 'Legal & compliance',
        description:
          'Scan through hundreds of pages and extract insights. Perfect for contract review, audits, and due diligence.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1620558138198-cfb9b4f3c294?auto=format&fit=crop&w=1671&q=80',
      alt: 'Tuxibot Use Case',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Answers that come from your documents.
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <FAQs
    title="Tuxibot FAQs"
    items={[
      {
        title: 'Can I use Tuxibot with my own documents?',
        description:
          'Yes. Upload any supported file types and start asking questions immediately. Your documents stay private.',
        icon: 'tabler:file-upload',
      },
      {
        title: 'Where is Tuxibot hosted?',
        description:
          'Tuxibot is deployed in your own secure environment — whether on-prem or private cloud.',
        icon: 'tabler:server',
      },
      {
        title: 'What models does Tuxibot use?',
        description:
          'You can connect it to your preferred large language model — including local or enterprise-grade options.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Is Tuxibot secure?',
        description:
          'Yes. No data is shared externally, and the system runs entirely within your controlled infrastructure.',
        icon: 'tabler:lock',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <Steps2
    title="Ready to try Tuxibot?"
    subtitle="Let us know your documents and goals — we’ll help set it up."
    callToAction={{ text: 'Contact us', href: '/contact' }}
    items={[
      {
        title: 'Email us',
        description: 'contact@tuxibot.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Join our Discord',
        description: 'discord.gg/tuxibot',
        icon: 'tabler:brand-discord',
      },
      {
        title: 'Follow on X',
        description: '@tuxibot_ai',
        icon: 'tabler:brand-x',
      },
    ]}
  />
</Layout>
