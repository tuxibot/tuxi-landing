---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="Have questions about how Tuxibot can work with your documents, data setup, or deployment? Reach out and we’ll get back to you promptly."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our team typically responds within 24 business hours."
  />

  <!-- Features2 Widget -->

  <Features2
    title="We’re based in Utah and support remote teams"
    items={[
      {
        title: 'General support',
        description: `Questions about your deployment, settings, or usage? We’re here to help.`,
      },
      {
        title: 'Sales inquiries',
        description:
          'Interested in using Tuxibot for your team or organization? We can help with demos and pricing.',
      },
      {
        title: 'Technical support',
        description:
          'Having trouble with configuration, integrations, or document ingestion? Let our engineers assist.',
      },
      {
        title: 'Phone',
        description: '+1 (385) 424-5302',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contact@tuxibot.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Based in Utah, supporting remote clients globally.',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
