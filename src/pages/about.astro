---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->

  <Hero
    tagline="About Tuxibot"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Tuxibot Illustration',
    }}
  >
    <Fragment slot="title">
      Secure. Private. <span class="text-accent dark:text-white">AI from Your Documents</span>
    </Fragment>

    <Fragment slot="subtitle">
      Tuxibot was built to help teams get direct answers from the documents they already own — without giving up privacy or control. No cloud sharing. No public models. Just fast, context-aware retrieval and generation.
    </Fragment>
  </Hero>

  <!-- Stats Widget -->

  <Stats
    title="Tuxibot in numbers"
    stats={[
      { title: 'Deployments', amount: '50+' },
      { title: 'Supported file types', amount: '15+' },
      { title: 'Languages supported', amount: '10+' },
      { title: 'LLM integrations', amount: '5+' },
    ]}
  />

  <!-- Features3 Widget: How Tuxibot Helps -->

  <Features3
    title="What we offer"
    subtitle="We focus on delivering intelligent document search while prioritizing data privacy and security."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Private Deployments',
        description: 'Every instance of Tuxibot runs in your environment — whether it’s self-hosted or managed privately.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'LLM Flexibility',
        description: 'Connect your own model (OpenAI, Ollama, HuggingFace, etc.) or use your preferred secure endpoint.',
        icon: 'tabler:cpu',
      },
      {
        title: 'RAG-Powered Answers',
        description: 'Tuxibot breaks down documents into searchable vectors, retrieves relevant chunks, and answers based on true context.',
        icon: 'tabler:brain',
      },
    ]}
  />

  <!-- Features3 Widget: Use Cases -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Internal Wikis & Docs',
        description: 'Let teams query your internal knowledge base instantly — no more searching shared drives.',
        icon: 'tabler:book',
      },
      {
        title: 'Compliance & Policy Retrieval',
        description: 'Ask direct questions about regulations, policies, and legal docs with reliable traceability.',
        icon: 'tabler:scale',
      },
      {
        title: 'Customer Support Enablement',
        description: 'Boost agents with real-time answers from user manuals, service docs, and support playbooks.',
        icon: 'tabler:headphones',
      },
      {
        title: 'Legal & Contract Analysis',
        description: 'Review and query legal documents to extract obligations, dates, and context without reading 100 pages.',
        icon: 'tabler:file-text',
      },
      {
        title: 'Onboarding & HR Knowledge',
        description: 'Speed up new employee onboarding by providing answers sourced from handbooks and policies.',
        icon: 'tabler:user-check',
      },
      {
        title: 'Engineering & Technical Docs',
        description: 'Let engineers query through specs, integration docs, and requirements with AI assistance.',
        icon: 'tabler:tools',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=1740&q=80',
      alt: 'Use Cases Illustration',
    }}
  />

  <!-- Steps2 Widget: Values -->

  <Steps2
    title="Our principles"
    subtitle="We believe in empowering users with fast access to their own knowledge — without compromising privacy or control."
    items={[
      {
        title: 'Data stays yours',
        description: 'Tuxibot doesn’t store your data externally. Everything runs where you choose.',
      },
      {
        title: 'Clarity through context',
        description: 'We design for answers that cite real document context — no guessing.',
      },
      {
        title: 'Privacy by default',
        description: 'We avoid external dependencies and work with clients to maintain full data control.',
      },
    ]}
  />

  <!-- Steps2 Widget: Achievements -->

  <Steps2
    title="Highlights"
    subtitle="Built for real-world knowledge retrieval at scale."
    isReversed={true}
    callToAction={{
      text: 'Try a demo',
      href: '/contact',
    }}
    items={[
      {
        title: 'Trusted by enterprises',
        description: 'Used in legal, government, education, and private sector workflows.',
        icon: 'tabler:building-bank',
      },
      {
        title: 'Flexible integrations',
        description: 'REST API, SDK, and embeddable chat UI options for custom apps.',
        icon: 'tabler:plug',
      },
      {
        title: 'Fast, local, accurate',
        description: 'Built-in vector search, caching, and streaming results for speed.',
        icon: 'tabler:bolt',
      },
    ]}
  />

  <!-- Features2 Widget: Contact -->

  <Features2
    title="Get in touch"
    tagline="We're here to help"
    columns={2}
    items={[
      {
        title: 'Schedule a call',
        description:
          'Let’s talk through your documents, data security needs, and deployment preferences.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Chat with our team',
        description:
          'We’re available for technical discussions, integration advice, or demos.',
        icon: 'tabler:message-dots',
      },
    ]}
  />
</Layout>
